<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.example.ekint.spark_front.SplashScreen">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="217dp">

        <LinearLayout
            android:id="@+id/llbuttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llChild"
                android:layout_width="290dp"
                android:layout_height="125dp"
                android:layout_marginTop="32dp"
                android:layout_gravity="center"
                android:background="@color/colorBlue"
                android:orientation="horizontal"
                android:backgroundTint="@color/colorBlue">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/child"
                    android:layout_gravity="left"
                    android:scaleX="0.8"
                    android:scaleY="0.8"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="I'm a child"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/activity_font_size"
                    android:fontFamily="@font/adam"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llParent"
                android:layout_width="290dp"
                android:layout_height="125dp"
                android:layout_marginTop="64dp"
                android:layout_gravity="center"
                android:background="@color/colorBlue"
                android:orientation="horizontal"
                android:backgroundTint="@color/colorBlue">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/parent"
                    android:layout_gravity="left"
                    android:scaleX="0.8"
                    android:scaleY="0.8"/>

                <TextView
                    android:layout_marginLeft="32dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="I'm a Parent"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/activity_font_size"
                    android:fontFamily="@font/adam"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llDoctor"
                android:layout_width="290dp"
                android:layout_height="125dp"
                android:layout_marginTop="64dp"
                android:layout_gravity="center"
                android:background="@color/colorBlue"
                android:orientation="horizontal"
                android:backgroundTint="@color/colorBlue">


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/child"
                    android:layout_gravity="left"
                    android:scaleX="0.8"
                    android:scaleY="0.8"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_gravity="center_vertical"
                    android:text="I'm a Doctor"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/activity_font_size"
                    android:fontFamily="@font/adam"
                    />
            </LinearLayout>


        </LinearLayout>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
